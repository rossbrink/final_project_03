<div>
  <div>
    <h1>
      List of all needs
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new need
    </h2>

    <form action="/insert_need" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="services_count_box">
          Services count
        </label>

        <input type="text" id="services_count_box" name="query_services_count">
      </div>

      <button>
        Create need
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Services count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_needs.each do |a_need| %>
      <tr>
        <td>
          <%= a_need.id %>
        </td>

        <td>
          <%= a_need.name %>
        </td>

        <td>
          <%= a_need.description %>
        </td>

        <td>
          <%= a_need.services_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_need.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_need.updated_at) %> ago
        </td>

        <td>
          <a href="/needs/<%= a_need.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
