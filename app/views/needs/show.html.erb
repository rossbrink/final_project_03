<div>
  <div>
    <h1>
      Need #<%= @the_need.id %> details
    </h1>

    <div>
      <div>
        <a href="/needs">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_need/<%= @the_need.id %>">
          Delete need
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_need.name %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_need.description %>
      </dd>

      <dt>
        Services count
      </dt>
      <dd>
        <%= @the_need.services_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_need.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_need.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit need
    </h2>

    <form action="/modify_need/<%= @the_need.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_need.name %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_need.description %>">
      </div>

      <div>
        <label for="services_count_box">
          Services count
        </label>

        <input type="text" id="services_count_box" name="query_services_count" value="<%= @the_need.services_count %>">
      </div>

      <button>
        Update need
      </button>
    </form>
  </div>
</div>

<hr>
