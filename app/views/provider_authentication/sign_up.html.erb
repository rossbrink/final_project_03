<h1>Sign up</h1>

<form action="/insert_provider" method="post" enctype="multipart/form-data">

  <div>
    <label for="email_box">Email</label>
    <input id="email_box" name="query_email" placeholder="Choose a email..." type="text">
  </div>
                 
  <div>
    <label for="first_name_box">First name</label>
      
    <input type="text" id="first_name_box" name="query_first_name">
  </div>
         
  <div>
    <label for="last_name_box">Last name</label>
      
    <input type="text" id="last_name_box" name="query_last_name">
  </div>
         
  <div>
    <label for="price_box">Price</label>
      
    <input type="text" id="price_box" name="query_price">
  </div>
         
  <div>
    <label for="image_box">Image</label>
    <%#= image_tag(@the_provider.image_url) if @the_provider.image? %>
      
    <input type="file" id="image_box" name="image" class="form-control">
  </div>
         
  <div>
    <label for="description_box">Description</label>
      
    <input type="text" id="description_box" name="query_description">
  </div>
         
  <div>
    <label for="reviews_count_box">Reviews count</label>
      
    <input type="text" id="reviews_count_box" name="query_reviews_count">
  </div>
         
  <div>
    <label for="spoken_languages_count_box">Spoken languages count</label>
      
    <input type="text" id="spoken_languages_count_box" name="query_spoken_languages_count">
  </div>
         
  <div>
    <label for="services_count_box">Services count</label>
      
    <input type="text" id="services_count_box" name="query_services_count">
  </div>
    
  <div>
    <label for="password_box">Password</label>
    <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
  </div>

  <div>
    <label for="password_confirmation_box">Password Confirmation</label>
    <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
  </div>

  <button>
    Sign up
  </button>
</form>

<hr>

<p>
  Or, <a href="/provider_sign_in">Sign in</a> instead.
</p>
