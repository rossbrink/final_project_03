<div class="container">

<div class="card border-0 bg-light" style="margin-top: 25px">
    <div class="card-header bg-warning border-0">
      <strong>Provider Sign Up</strong>
    </div>

    <div class="card-body">

      <form action="/insert_provider" method="post" enctype="multipart/form-data">

        <div class="form-group">
          <label for="email_box">Email</label>
          <input class="form-control" id="email_box" name="query_email" placeholder="Choose a email..." type="text">
        </div>
                      
        <div class="form-group">
          <label for="first_name_box">First name</label>
          <input class="form-control" type="text" id="first_name_box" name="query_first_name">
        </div>
              
        <div class="form-group">
          <label for="last_name_box">Last name</label>
          <input class="form-control" type="text" id="last_name_box" name="query_last_name">
        </div>
              
        <div class="form-group">
          <label for="price_box">Price</label>
          <input class="form-control" type="text" id="price_box" name="query_price">
        </div>
              
        <div class="form-group">
          <label for="image_box">Image</label>            
          <input class="form-control" type="file" id="image_box" name="image" class="form-control">
        </div>
              
        <div class="form-group">
          <label for="description_box">Description</label>
          <input class="form-control" type="text" id="description_box" name="query_description">
        </div>
          
        <div class="form-group">
          <label for="password_box">Password</label>
          <input class="form-control" id="password_box" name="query_password" placeholder="Choose a password..." type="password">
        </div>

        <div class="form-group">
          <label for="password_confirmation_box">Password Confirmation</label>
          <input class="form-control" id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
        </div>

        <button type="submit" class="btn btn-warning">
          <strong>Sign Up</strong>
        </button>
      </form>
    </div>
  </div>

</div>