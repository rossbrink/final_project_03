<div>
  <div>
    <h1>
      List of all services
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new service
    </h2>

    <form action="/insert_service" method="post">
      <div>
        <label for="need_id_box">
          Need
        </label>

        <input type="text" id="need_id_box" name="query_need_id">
      </div>

      <div>
        <label for="provider_id_box">
          Provider
        </label>

        <input type="text" id="provider_id_box" name="query_provider_id">
      </div>

      <button>
        Create service
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Need
        </th>

        <th>
          Provider
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_services.each do |a_service| %>
      <tr>
        <td>
          <%= a_service.id %>
        </td>

        <td>
          <%= a_service.need_id %>
        </td>

        <td>
          <%= a_service.provider_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_service.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_service.updated_at) %> ago
        </td>

        <td>
          <a href="/services/<%= a_service.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
