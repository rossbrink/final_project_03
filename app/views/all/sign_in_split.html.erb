<div class="container">
<div class="card border-0 bg-light" style="margin-top: 25px">
    <div class="card-header bg-success text-white border-0">
      <strong>User Sign In</strong>
    </div>

    <div class="card-body">

      <form action="/user_verify_credentials" method="post">
        <div class="form-group">
          <label for="email_box">Email</label>
          <input class="form-control" id="email_box" name="query_email" placeholder="Enter your email..." type="text">
        </div>

        <div class="form-group">
          <label for="password_box">Password</label>
          <input class="form-control" id="password_box" name="query_password" placeholder="Enter your password..." type="password">
        </div>

        <button type="submit" class="btn btn-success">
          <strong>Sign in</strong>
        </button>
      </form>
    </div>
  </div>
</div>

