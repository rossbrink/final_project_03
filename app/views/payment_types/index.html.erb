<div>
  <div>
    <h1>
      List of all payment types
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new payment type
    </h2>

    <form action="/insert_payment_type" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="url_box">
          Url
        </label>

        <input type="text" id="url_box" name="query_url">
      </div>

      <button>
        Create payment type
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Url
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_payment_types.each do |a_payment_type| %>
      <tr>
        <td>
          <%= a_payment_type.id %>
        </td>

        <td>
          <%= a_payment_type.name %>
        </td>

        <td>
          <%= a_payment_type.url %>
        </td>

        <td>
          <%= time_ago_in_words(a_payment_type.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_payment_type.updated_at) %> ago
        </td>

        <td>
          <a href="/payment_types/<%= a_payment_type.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
